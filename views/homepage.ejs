<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="homepage_style.css">
    <link rel="icon" type="image/x-icon" href="weight.svg">
    <title>Homepage</title>
</head>
<body>
    <nav>
        <ul>
            <li><a onclick="location.reload();">Hi <%= username %>!</a></li>
            <li><a href="newWorkout">New Workout</a></li>
            <li><a href="">Compete</a></li>
            <li><a href="leaderboard">Leaderboard</a></li>
            <li><a href="login">Logout</a></li>
        </ul>
    </nav>
    <div id="wrapper">
        <div id="labels">
            <div id="PUSH">PUSH</div>
            <div id="PULL">PULL</div>
            <div id="LEGS">LEGS</div>
        </div>
        <div id="stats">
            <ul id="push">
                <% if (user && user.workouts) { %>
                    <% user.workouts.forEach((workout, index) => { %>
                        <% if (user.category[index] == "Push") { %>
                            <li><%= workout %> - <%= user.weights[index] %>lbs 
                                - Sets: <%= user.sets[index] %> Reps: <%= user.reps[index] %></li>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <li>No workouts available.</li>
                <% } %>
            </ul>
            <ul id="pull">
                <% if (user && user.workouts) { %>
                    <% user.workouts.forEach((workout, index) => { %>
                        <% if (user.category[index] == "Pull") { %>
                            <li><%= workout %> - <%= user.weights[index] %>lbs
                                - Sets: <%= user.sets[index] %> Reps: <%= user.reps[index] %></li>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <li>No workouts available.</li>
                <% } %>
            </ul>
            <ul id="legs">
                <% if (user && user.workouts) { %>
                    <% user.workouts.forEach((workout, index) => { %>
                        <% if (user.category[index] == "Legs") { %>
                            <li><%= workout %> - <%= user.weights[index] %>lbs
                                - Sets: <%= user.sets[index] %> Reps: <%= user.reps[index] %></li>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <li>No workouts available.</li>
                <% } %>
            </ul>
        </div>
    </div>
</body>
</html>